language="csharp"
run="cd BlazorApp/ && dotnet watch run"

[env]
DOTNET_NOLOGO = "1"
DOTNET_CLI_TELEMETRY_OPTOUT = "1"

[packager]
language = "dotnet"

[packager.features]
packageSearch = true

[nix]
channel = "stable-21_11"

[languages.csharp]
pattern = "**/{*.cs,*.razor}"

  [languages.csharp.languageServer]
  start = ["omnisharp", "--languageserver"]

[workflows]
runButton = "Run Api"

[[workflows.workflow]]
name = "Run API"
author = 38606645

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project IncliSafeApi"

