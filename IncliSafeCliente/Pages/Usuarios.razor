
@page "/usuarios"
@inject HttpClient Http
@inject IDialogService DialogService
@inject ISnackbar Snackbar

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-4">
    <MudText Typo="Typo.h3" GutterBottom="true">Usuarios</MudText>

    <MudButton Color="Color.Primary" OnClick="@(() => OpenDialog(new()))" Class="mb-4">
        Nuevo Usuario
    </MudButton>

    <MudTable Items="@usuarios" Dense="true" Hover="true" Loading="@loading">
        <HeaderContent>
            <MudTh>Nombre</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Rol</MudTh>
            <MudTh>Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Nombre</MudTd>
            <MudTd>@context.Email</MudTd>
            <MudTd>@context.Rol</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" 
                             Color="Color.Primary" 
                             OnClick="@(() => OpenDialog(context))" />
                <MudIconButton Icon="@Icons.Material.Filled.Delete" 
                             Color="Color.Error" 
                             OnClick="@(() => DeleteUsuario(context))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>

@code {
    private List<Usuario> usuarios = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsuarios();
    }

    private async Task LoadUsuarios()
    {
        try
        {
            usuarios = await Http.GetFromJsonAsync<List<Usuario>>("api/usuarios") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add("Error al cargar usuarios: " + ex.Message, Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    private async Task OpenDialog(Usuario usuario)
    {
        var parameters = new DialogParameters
        {
            ["usuario"] = usuario
        };

        var dialog = await DialogService.ShowAsync<UsuarioDialog>("Usuario", parameters);
        var result = await dialog.Result;

        if (!result.Canceled)
        {
            await LoadUsuarios();
        }
    }

    private async Task DeleteUsuario(Usuario usuario)
    {
        var confirm = await DialogService.ShowMessageBox(
            "Confirmar",
            "¿Está seguro de eliminar este usuario?",
            yesText: "Eliminar",
            noText: "Cancelar"
        );

        if (confirm ?? false)
        {
            try
            {
                await Http.DeleteAsync($"api/usuarios/{usuario.Id}");
                await LoadUsuarios();
                Snackbar.Add("Usuario eliminado correctamente", Severity.Success);
            }
            catch (Exception ex)
            {
                Snackbar.Add("Error al eliminar usuario: " + ex.Message, Severity.Error);
            }
        }
    }
}
