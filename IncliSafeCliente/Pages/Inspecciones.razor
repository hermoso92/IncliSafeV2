
@page "/inspecciones"
@using System.Net.Http.Json
@inject HttpClient Http
@inject ISnackbar Snackbar

<MudText Typo="Typo.h3" Class="mb-4">Gestión de Inspecciones</MudText>

<MudPaper Class="pa-4">
    <MudTable Items="@inspecciones" Dense="true" Hover="true" Loading="@loading" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Vehículo</MudTh>
            <MudTh>Inspector</MudTh>
            <MudTh>Fecha</MudTh>
            <MudTh>Resultado</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Id">@context.Id</MudTd>
            <MudTd DataLabel="Vehiculo">@context.Vehiculo?.Placa</MudTd>
            <MudTd DataLabel="Inspector">@context.Usuario?.Nombre</MudTd>
            <MudTd DataLabel="Fecha">@context.FechaInspeccion.ToShortDateString()</MudTd>
            <MudTd DataLabel="Resultado">
                <MudChip Color="@(context.Resultado == "Aprobado" ? Color.Success : Color.Error)">
                    @context.Resultado
                </MudChip>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    private List<Inspeccion> inspecciones = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            inspecciones = await Http.GetFromJsonAsync<List<Inspeccion>>("api/inspecciones") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add("Error al cargar inspecciones: " + ex.Message, Severity.Error);
        }
        finally
        {
            loading = false;
        }
    }

    public class Inspeccion
    {
        public int Id { get; set; }
        public Vehiculo Vehiculo { get; set; }
        public Usuario Usuario { get; set; }
        public DateTime FechaInspeccion { get; set; }
        public string Resultado { get; set; }
        public string Observaciones { get; set; }
    }
}
