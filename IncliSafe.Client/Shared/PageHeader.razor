<MudPaper Class="pa-4 mb-4">
    <MudStack Row="true" AlignItems="AlignItems.Center">
        <div class="flex-grow-1">
            <MudText Typo="Typo.h5">@Title</MudText>
            @if (!string.IsNullOrEmpty(Subtitle))
            {
                <MudText Typo="Typo.subtitle1" Color="Color.Secondary">@Subtitle</MudText>
            }
        </div>
        @if (ShowAddButton)
        {
            <MudButton Color="Color.Primary" 
                      OnClick="OnAddClick"
                      StartIcon="@Icons.Material.Filled.Add">
                @AddButtonText
            </MudButton>
        }
    </MudStack>
</MudPaper>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Subtitle { get; set; } = "";
    [Parameter] public bool ShowAddButton { get; set; }
    [Parameter] public string AddButtonText { get; set; } = "Nuevo";
    [Parameter] public EventCallback OnAddClick { get; set; }
} 