@page "/"

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Bienvenido a IncliSafe</MudText>
    <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-8">Sistema de Gestión de Inspecciones Vehiculares</MudText>

    <MudGrid Justify="Justify.Center" Spacing="6">
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="4">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.DirectionsCar" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h5" Class="mt-2">Vehículos</MudText>
                    <MudText>Gestione la flota de vehículos</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" Href="/vehiculos">Ver más</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="4">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Assignment" Color="Color.Secondary" Size="Size.Large" />
                    <MudText Typo="Typo.h5" Class="mt-2">Inspecciones</MudText>
                    <MudText>Realice y consulte inspecciones</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" Color="Color.Secondary" Href="/inspecciones">Ver más</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>